{{!
    @template format_etask/gradingtable_help_popover

    This template renders the grading table help popover.

    Example context (json):
    {
        "version": 2020080900,
        "release": "2.1",
        "displayname": "eTask topics format",
        "pluginicon": "<img src=\"...\" alt=\"...\">",
        "improveicon": "<img src=\"...\" alt=\"...\">"
    }
}}

<div class="popover-container m-3 text-justify">
    <div class="mb-3 text-black-50">
        {{#str}}release, plugin{{/str}} {{release}} (version {{version}})
    </div>

    <div class="d-flex mt-3 align-items-start">
        {{{pluginicon}}}
        <div class="d-flex flex-column w-100">
            <a href="https://moodle.org/plugins/format_etask" class="text-decoration-none d-block" target="_blank">
                <h6 class="d-inline font-weight-bold">{{displayname}}</h6>
            </a>

            <div class="mt-3">
                {{#str}}helpabout, format_etask{{/str}}
            </div>

            <div class="mt-3 position-relative">
                <a href="https://moodle.org/plugins/format_etask" class="stretched-link" target="_blank">{{#str}}showmore, format_etask{{/str}}</a>
            </div>
        </div>
    </div>

    <div class="border-top mr-n3 ml-n3 mt-3 pt-3">
        <div class="d-flex align-items-start pl-3 pr-3">
            {{{improveicon}}}
            <div class="d-flex flex-column w-100">
                <h6 class="d-inline font-weight-bold">{{#str}}helpimprovehead, format_etask{{/str}}</h6>
                <div class="mt-2">
                    {{#str}}helpimprovebody, format_etask{{/str}}
                </div>
            </div>
        </div>
    </div>
</div>
