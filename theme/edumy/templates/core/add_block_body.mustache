{{!
    @template core/add_block_body

    Template for the body of the add block modal.

    Context variables required for this template:
    * blocks - list of blocks containing name and title
    * url - base url for links back to same page.

    Example context (json):
    {
        "blocks" : [ { "name": "test", "title": "Test block" } ],
        "url" : "?a=b"
    }

}}
<div id="ccn-visualize-preview-container" class="ccnPreviewW" style="display:none">
  <div class="container">
    <div class="ccn-visualize-preview-body">
      <div class="ccn-visualize-preview-content">
        <div class="ccnVC">
          <div class="ccnVC--inner">
            <div id="ccnPrevPreviewContainer" class="ccnNavI"><span class="flaticon-left-arrow"></span></div>
            <div id="ccnNextPreviewContainer" class="ccnNavI"><span class="flaticon-right-arrow-1"></span></div>
            <div class="close" id="ccnClosePreviewContainer">Ã—</div>
            <h1 id="ccn-visualize-preview-container-title"></h1>
            <h2 id="ccn-visualize-preview-container-title-2"></h2>
            <p id="ccn-visualize-preview-container-detail"></p>
            <div id="ccn-visualize-preview-container-img"></div>
            <a id="ccn-visualize-preview-container-href" class="ccnBtn mt-3">{{#str}} select, theme_edumy {{/str}} <span class="ccn-flaticon-add"></span></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="ccn-visualize-search-blocks">
  <input class="form-control" placeholder="Search" type="text" size="15">
</div>
<div class="row ccn-visualize-block-group">
  {{#blocks}}
    <div class="col-xs-12 col-md-4 col-xl-3 ccn-control-visualize-block--col" data-ccn-name="{{name}}">
      <a href="{{url}}&amp;bui_addblock={{name}}" class="ccn-control-visualize-block" data-ccn-title="{{title}}" data-ccn-name="{{name}}" data-ccn-href="{{url}}&amp;bui_addblock={{name}}">
        <div class="ccn-control-visualize-block-inner">
          <h5 class="ccn-control-visualize-block-title">{{title}}</h5>
          <div class="ccn-control-visualize-block-img ccnImg"></div>
        </div>
      </a>
    </div>
  {{/blocks}}
</div>
