{{!
    @template qformat_h5p/graderinfo

    Grader info template.

    Context variables required for this template:
    * keywords - The list of keyword checks

    Example context (json):
    {
        "keywords": [
            {
                "options": {
                    "points": "10",
                    "occurrences": "3",
                    "caseSensitive": "true",
                    "forgiveMistakes": "false",
                    "feedbackMissed": "To summarize the book, you should really mention the main character by name at least once."
                 },
                 "keyword": "Bilbo"
            }
        ]
    }
}}
{{# keywords }}
    <div>{{ options.points }} {{ keyword }}: {{ options.feedbackMissed }}</div>
{{/ keywords }}
