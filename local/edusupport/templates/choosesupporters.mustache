<div class="local_edusupport choosesupporters">
    <table class="generaltable" width="100%">
        <thead>
            <tr>
                <td width="50">{{#str}} userid, local_edusupport {{/str}}</td>
                <td>{{#str}} name {{/str}}</td>
                <td>{{#str}} supportlevel, local_edusupport {{/str}}</td>
                <td>{{#str}} action {{/str}}</td>
            </tr>
        </thead>
        <tbody>
            {{#supporters}}
                <form method="POST" action="" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="{{id}}" />
                <tr>
                    <td><input type="number" name="userid" value="{{userid}}" /></td>
                    <td>{{lastname}} {{firstname}}</td>
                    <td><input type="text" name="supportlevel" value="{{supportlevel}}" /></td>
                    <td>
                        <input type="submit" name="remove" value="{{#str}} remove {{/str}}" />
                        <input type="submit" value="{{#str}} save {{/str}}" />
                    </td>
                </tr>
                </form>
            {{/supporters}}
            <form method="POST" action="" enctype="multipart/form-data">
            <tr>
                <td><input type="number" name="userid" value="{{userid}}" /></td>
                <td>-</td>
                <td><input type="text" name="supportlevel" value="{{supportlevel}}" /></td>
                <td>
                    <input type="submit" value="{{#str}} save {{/str}}" />
                </td>
            </tr>
            </form>
        </tbody>
    </table>
</div>
