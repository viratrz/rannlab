<div class="local_edusupport chooseforum">
    <table class="generaltable" width="100%">
        <thead>
            <tr>
                <td width="250">{{#str}} toggle, local_edusupport {{/str}}</td>
                <td width="250">{{#str}} toggle:central, local_edusupport {{/str}}</td>
                <td>{{#str}} name {{/str}}</td>
                <td width="150">{{#str}} dedicatedsupporter, local_edusupport {{/str}}</td>
            </tr>
        </thead>
        <tbody>
            {{#forums}}
                <tr>
                    <td>
                        {{^state}}
                            <a href="{{wwwroot}}/local/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&state=1"
                                class="btn btn-block btn-secondary">
                                {{#str}} supportforum:enable, local_edusupport {{/str}}
                            </a>
                        {{/state}}
                        {{#state}}
                        <a href="{{wwwroot}}/local/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&state=-1"
                            class="btn btn-block btn-primary">
                            {{#str}} supportforum:disable, local_edusupport {{/str}}
                        </a>
                        {{/state}}
                    </td>
                    <td>
                        {{^state}}
                            -
                        {{/state}}
                        {{#state}}
                            {{^statecentral}}
                                <a href="{{wwwroot}}/local/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&central=1"
                                    class="btn btn-block btn-primary">
                                    {{#str}} supportforum:central:enable, local_edusupport {{/str}}
                                </a>
                            {{/statecentral}}
                            {{#statecentral}}
                                <a href="{{wwwroot}}/local/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&central=-1"
                                    class="btn btn-block btn-primary">
                                    {{#str}} supportforum:central:disable, local_edusupport {{/str}}
                                </a>
                            {{/statecentral}}
                        {{/state}}
                    </td>
                    <td>{{name}}</td>
                    <td>
                        {{^state}}
                            -
                        {{/state}}
                        {{#state}}
                        <select name="setsupporter_{{uniqid}}_{{id}}" onchange="top.location.href='{{wwwroot}}/local/edusupport/chooseforum.php?courseid={{course}}&forumid={{id}}&dedicatedsupporter=' + this.value;">
                            <option value="-1">{{#str}} none {{/str}}</option>
                            {{#supporters}}
                            <option value="{{userid}}"{{#selected}} selected="selected" {{/selected}}>
                                {{supportlevel}}:
                                {{userfullname}} ({{email}})
                            </option>
                            {{/supporters}}
                        </select>
                        {{/state}}
                    </td>
                </tr>
            {{/forums}}
        </tbody>
    </table>
</div>
