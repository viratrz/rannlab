<div class="efb-forms-setup ">
    <div class="efb-forms-setup-title">
        {{panelsetup.heading}}
        <p class="efb-forms-setup-desc core">
            {{panelsetup.msg_select_tmpl}}
        </p>
    </div>

    <div id="efb-forms-setup-templates-core" class="efb-forms-setup-templates">
        <div class="efb-list">
            {{#panelsetup.list}}
                <div class="template {{#active}}active{{/active}}" id="template-{{tmpl_id}}">
                    <div class="template-name">
                        {{tmpl_name}}
                        <label class="template-active btn btn-primary m-0">{{#str}} active, local_edwiserform {{/str}}</label>
                    </div>
                    <div class="template-details">
                        <p class="desc">{{desc}}</p>
                    </div>
                    <div class="template-overlay">
                        <a href="#" class="template-select btn btn-primary" {{#pro}}data-pro="true"{{/pro}} data-template-name="{{tmpl_name}}" data-template="{{tmpl_id}}">
                            {{tmpl_hover_txt}}
                        </a>
                        <i class="template-loading fa fa-gear fa-spin" aria-hidden="true"></i>
                    </div>
                </div>
            {{/panelsetup.list}}
        </div>
    </div>
</div>
